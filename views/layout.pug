doctype html
html
  head
    title= title
    base(href='/')
    meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    script(src='https://use.fontawesome.com/cfe933f55c.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-route.min.js')
    script(src='/javascripts/puretube.js')
    script(src='/javascripts/controllers.js')
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u' crossorigin='anonymous')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body(ng-app='puretube')
    nav.navbar.navbar-default.navbar-static-top(ng-controller='navController')
      div.container-fluid
        div.navbar-header
          a.navbar-brand(href='/')
            div.navbar-logo PureTube
        form.navbar-form.navbar-right
          div.form-group
            input.form-control(type='text' placeholder='Search Channels' ng-model='navSearchQuery' required)
          | 
          a(ng-href='/search/{{ navSearchQuery }}')
            button.btn.btn-default(type='submit') Go
    block content
  footer.footer
    div.footer-logo PureTube
    small &copy; #{new Date().getFullYear()} colby.sargent.codes